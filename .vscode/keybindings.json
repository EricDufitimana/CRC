{
  "vim.normalModeKeyBindingsNonRecursive": [
  {
    "before": [";"],
    "after": [":"]
  },
  {
    "before": ["<CapsLock>"],
    "after": ["<Esc>"]
  },
  {
    "before": ["<S-CapsLock>"],
    "after": ["<Esc>"]
  },
  {
    "before": ["<S-Space>"],
    "after": []
  },
  {
    "before": [" "],
     
    "commands": ["editorScroll", { "to": "down", "by": "halfPage", "revealCursor": true }]
  },
  {
    "before": ["n"],
    "commands": ["editorScroll", { "to": "up", "by": "halfPage", "revealCursor": true }]
  },
  {
    "before": ["o"],
    "after": ["1","0","j"]
  },
  {
    "before": ["O"],
    "after": ["1","0","k"]
  }
  ]
}
